{
  "name": "@mooeypoo/dom-word-replacer",
  "version": "0.9.0",
  "author": "Moriel Schottlender",
  "license": "MIT",
  "description": "A javascript library that allows replacing words in DOM documents.",
  "main": "index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/mooeypoo/dom-word-replacer"
  },
  "scripts": {
    "build": "babel src -d dist",
    "pretest": "eslint --ignore-path .gitignore .",
    "test": "nyc ./node_modules/.bin/mocha --require @babel/register",
    "doc": "jsdoc -c .jsdoc.json",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov mocha"
  },
  "nyc": {
    "all": true,
    "instrument": true,
    "extension": [".js"],
    "include": [
      "!**/test/**/*",
      "!**/test.*",
      "dist/**/*",
      "src/**/*"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.5",
    "chai": "^4.2.0",
    "eslint": "^7.24.0",
    "eslint-config-wikimedia": "^0.16.2",
    "eslint-plugin-jsdoc": "^30.2.1",
    "jsdoc": "^3.6.5",
    "jsdoc-wmf-theme": "0.0.3",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "parse5": "^6.0.1",
    "xmldom": "^0.5.0",
    "xmlserializer": "^0.6.1",
    "xpath": "0.0.32"
  }
}
